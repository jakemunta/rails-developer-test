<h2>Edit User</h2>
<%= simple_form_for @user,:user =>  admin_user_path(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:" %>
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :email, class: "form-control" %>
  </div>
 
  <div class="form-group">
     <label>Password:</label>
    <%= f.password_field :password, lable: 'Password' ,class: "form-control" %>
  </div>

  <div class="form-group">
<label>Role:</label>
    <%= f.collection_select( :role, User::ROLES,:to_s, lambda{|i| i.to_s.humanize },lable:"Role", class: "form-control") %>
  </div>

  <div class="form-group">
    <%= f.button :submit, 'Update User' %>
  </div>
<% end %>
