<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @articals.each do |article| %>
    <div class="col-xs-12">
      <div class="text-center">
        <h2><%= article.title %></h2>
        <h6><%= article.created_at.strftime('%b %d, %Y') %></h6>
      </div>

      <div>
        <%= raw(article.content).truncate(358) %>
      </div>

      <div class="text-center">
        <%= link_to "READ MORE", artical_path(article) %>
      </div>
      <br>
<div class="text-center">
        <%= link_to "Edit", edit_artical_path(article) if current_user && article.user_id == current_user.id %>
      </div>
      <br>
    </div>
    <% end %>

   <p><% if current_user && (current_user.editor?)%><%= link_to "New Article", new_artical_path%><% end%></p>

<p><% if current_user && current_user.admin? %><%= link_to "Manage User" , admin_users_path %><% end %></p>
  </div>
</div>

